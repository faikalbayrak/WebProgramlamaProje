@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserName> SignInManager
@inject UserManager<UserName> UserManager
<link href="~/stlye.css" rel="stylesheet" />
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.Identity.IsAuthenticated)
        {
            @if (User.IsInRole("Admin"))
            {

                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name <i class="fas fa-user-circle"></i></a>
                </li>
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-dark">Çıkış Yap</button>
                    </form>
                </li>
                <li>
                    <p class="admin-nav">ADMIN</p>
                </li>

            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name <i class="fas fa-user-circle"></i></a>
                </li>
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-dark">Çıkış Yap</button>
                    </form>
                </li>
            }
        }

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-key"></i> Kayıt Ol</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt"></i> Giriş Yap</a>
        </li>
    }
</ul>
